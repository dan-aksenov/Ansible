scope: "{{ patroni_cluster_name }}"
namespace: "{{ patroni_namespace }}"
name: "{{ patroni_host_name }}"

restapi:
  listen: {{ patroni_api_listen }}
  connect_address: {{ patroni_api_connect_address }}

{% if etcd_hosts is defined %}
etcd:
  hosts: {{ etcd_hosts }}
{% endif %}

{% if consul_host is defined %}
consul:
  host: "{{ consul_host }}"
  token: "{{ consul_token }}"
  url: "{{ consul_url }}"
{% endif %}

{% if patroni_log_dir is defined %}
log:
  dir: "{{ patroni_log_dir }}"
{% endif %}

bootstrap:
  # this section will be written into Etcd:/<namespace>/<scope>/config after initializing new cluster
  # and all other cluster members will use it as a `global configuration`
  # max_connections and max_worker_processes can be set only here!
  dcs:
    ttl: 30
    loop_wait: 10
    retry_timeout: 10
    maximum_lag_on_failover: 1048576
#    master_start_timeout: 300
#    synchronous_mode: false
    #standby_cluster:
      #host: 127.0.0.1
      #port: 1111
      #primary_slot_name: patroni
    postgresql:
      use_pg_rewind: true
      use_slots: true
      parameters:
#        max_connections: 100
#        max_worker_processes: 8
#        wal_level: hot_standby
#        hot_standby: "on"
#        wal_keep_segments: 8
#        max_wal_senders: 10
#        max_replication_slots: 10
#        wal_log_hints: "on"
#        archive_mode: "on"
#        archive_timeout: 1800s
#        archive_command: mkdir -p ../wal_archive && test ! -f ../wal_archive/%f && cp %p ../wal_archive/%f
{% if patroni_recovery_conf is defined %}
      recovery_conf:
      {% for opt in patroni_recovery_conf %}
      {{ opt }}: {{ patroni_recovery_conf[opt] }}
      {% endfor %}
{% endif %}

  # some desired options for 'initdb'
  initdb:  # Note: It needs to be a list (some options need values, others are switches)
  - encoding: UTF8
  - data-checksums

  pg_hba:  # Add following lines to pg_hba.conf after running 'initdb'
{% if postgresql_hba is defined %}
  {% for opt in postgresql_hba %}
  - {{ opt }}
  {% endfor %}
  {% endif %}

postgresql:
  listen: 0.0.0.0:5432
  connect_address: {{ ansible_hostname }}:5432
  data_dir: /var/lib/pgsql/{{ postgresql_version }}/data/
  bin_dir: /usr/pgsql-{{ postgresql_version }}/bin
  config_dir: /var/lib/pgsql/{{ postgresql_version }}/data/
  pgpass: /tmp/pgpass0
  authentication:
    replication:
      username: replicator
      password: "{{ replicator_password }}"
    superuser:
      username: postgres
      password: "{{ postgres_superuser_password }}"
    rewind:  # Has no effect on postgres 10 and lower
      username: rewind_user
      password: "{{ rewind_user_password }}"
  parameters:
{% if postgresql_conf is defined %}
  {% for opt in postgresql_conf %}
  {{ opt }}: {{ postgresql_conf[opt] }}
  {% endfor %}
  {% endif %}

  pg_hba:
{% if postgresql_hba is defined %}
  {% for opt in postgresql_hba %}
  - {{ opt }}
  {% endfor %}
  {% endif %}
 
  unix_socket_directories: '.'

tags:
    nofailover: false
    noloadbalance: false
    clonefrom: false
    nosync: false
