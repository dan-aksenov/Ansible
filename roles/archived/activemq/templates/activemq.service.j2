[Unit]
Description=ActiveMQ service
After=network.target

[Service]
Type=forking
Environment=JAVA_HOME=/usr/lib/jvm/jre
PIDFile={{ root_dir }}/{{ activemq_name.split("-bin")[0] }}/data/activemq.pid
ExecStart={{ root_dir }}/{{ activemq_name.split("-bin")[0] }}/bin/activemq start
ExecStop={{ root_dir }}/{{ activemq_name.split("-bin")[0] }}/bin/activemq stop
User={{ activemq_user }}
Group={{ activemq_user }}

[Install]
WantedBy=multi-user.target

