# Systemd unit file for tomcat
# Created by ansible
[Unit]
Description=Apache Tomcat Web Application Container
After=syslog.target network.target

[Service]
Type=forking

Environment=JAVA_HOME={{ root_dir }}/jdk{{ java_version }}/jre
Environment=CATALINA_PID={{ tomcat_dir }}/temp/tomcat.pid
Environment=CATALINA_HOME={{ tomcat_dir }}
Environment=CATALINA_BASE={{ tomcat_dir }}
Environment='CATALINA_OPTS=-Xms2048M -Xmx2048M -server -XX:+UseParallelGC -Djava.net.preferIPv4Addresses=true'
Environment='JAVA_OPTS=-Djava.awt.headless=true -Djava.security.egd=file:/dev/./urandom -Djava.net.preferIPv4Addresses=true'

ExecStart={{ tomcat_dir }}/bin/startup.sh
ExecStop=/bin/kill -15 $MAINPID

User=tomcat
Group=tomcat

[Install]
WantedBy=multi-user.target