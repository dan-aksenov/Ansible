{% if pgbouncer_databases is defined %}
[databases]
{% for database in pgbouncer_databases %}
{{ database.db_name }} = host=127.0.0.1 port={{ postgresql_port }} dbname={{ database.db_name }} {% if database.db_pool_size is defined %} pool_size={{ database.db_pool_size }} {% endif %}
{% endfor %}
{% endif %}

{% if pgbouncer_conf is defined %}
[pgbouncer]
{% for opt in pgbouncer_conf %}
{{ opt }} = {{ pgbouncer_conf[opt] }}
{% endfor %}
{% endif %}
